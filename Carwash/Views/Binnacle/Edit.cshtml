@model Carwash.Models.Binnacle
@{
    ViewBag.Title = "Edit";
}
<div class="center-container">
    <div class="col-lg-3">
        <div class="location">
            <div class="container">
                <div class="row mt-4">
                    <div class="col-md-12">
                        <div class="location-form">
                            <h2 class="text-center" style="color: white;">Actualizar Gasto</h2>
                            @using (Html.BeginForm("Edit", "Binnacle", FormMethod.Post, new { enctype = "multipart/form-data", id = "formularioMio" }))
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <!-- Primera columna -->
                                            @Html.TextBoxFor(model => model.idBinnacle, new { @class = "form-control", style = "display: none;" })
                                        </div>
                                        <div class="form-group">
                                            <label style="color: white;">Tipo</label>
                                            @Html.DropDownListFor(model => model.type, new SelectList(new[] { "Ingreso", "Gasto" }), "Seleccione una opcion", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.type, "", new { @class = "text-danger", style = "font-style: italic; font-size: 12px;" })
                                        </div>
                                        <div class="form-group">
                                            <label style="color: white;">Descripcion</label>
                                            @Html.TextBoxFor(model => model.description, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger", style = "font-style: italic; font-size: 12px;" })
                                        </div>
                                        <div class="form-group">
                                            <label style="color: white;">Monto</label>
                                            @Html.TextBoxFor(model => model.amount, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger", style = "font-style: italic; font-size: 12px;" })
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" value="Guardar" class="btn btn-custom2" />
                                        </div>
                                        <div class="form-group">
                                            @if (Model.type == "Gasto")
                                            {
                                                @Html.ActionLink("Volver", "Index", new { id = 1 }, new { @class = "btn btn-custom1" })
                                            }
                                            else if (Model.type == "Ingreso")
                                            {
                                                @Html.ActionLink("Volver", "Index", new { id = 2 }, new { @class = "btn btn-custom1" })
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

