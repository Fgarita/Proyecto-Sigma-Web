@{
    ViewBag.Title = "PasswordRecovery";
}

<div class="center-container">
    <div class="col-lg-3">
        <div class="location">
            <div class="location-form">
                <h2 class="text-center" style="color: white;">Correo de recuperación</h2>
                <form action="@Url.Content("http://www.vettelcarwash.somee.com/User/PasswordRecovery")" method="post">
                    <div class="control-group">
                        <div class="alert alert-warning" role="alert">
                            Se ha enviado un correo para la recuperación de su contraseña.
                        </div>
                    </div>
                    <div class="input-box button">
                        <a href="@Url.Action("Login","User")" class="btn btn-custom">Regresar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
