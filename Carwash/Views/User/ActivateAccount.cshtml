@model Carwash.Models.ViewModel.ActivateAccountViewModel
@{
    ViewBag.Title = "ActivateAccount";
}
<div class="center-container">
    <div class="col-lg-3">
        <div class="location">
            @using (Html.BeginForm("ActivateAccount", "User", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(d => d.Token)
            <div class="location-form">
                <h2 class="text-center" style="color: white;">Iniciar Sesión</h2>
                <form>
                    <div class="control-group">
                        <label style="color: white;">Correo</label>
                        @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @type = "text", @class = "custom-input-width" } })
                        @Html.ValidationMessageFor(m => m.Email, "", new {style = "font-style: italic; font-size: 12px; color: red;" })
                    </div>
                    <div class="control-group">
                        <label style="color: white;">Contraseña</label>
                        @Html.PasswordFor(m => m.Password, new { @type = "password", @class = "custom-input-width" })
                        @Html.ValidationMessageFor(m => m.Password, "", new {style = "font-style: italic; font-size: 12px; color: red;" })
                    </div>
                    <br>
                    <div class="input-box button">
                        <input class="btn btn-custom2" type="Submit" value="Iniciar Sesión y activar cuenta">
                    </div>
                </form>
            </div>
            }
        </div>
    </div>
</div>
