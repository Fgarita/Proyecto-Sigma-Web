@model Carwash.Models.users

@{
    ViewBag.Title = "Login";
}

@Html.Partial("_NotificationPanel")
<div class="center-container">
    <div class="col-lg-3">
        <div class="location">
            @using (Html.BeginForm())
            {

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="location-form">
                    <h2 class="text-center" style="color: white;">Iniciar Sesión</h2>
                    <form>
                        <div class="control-group">
                            <label style="color: white;">Correo</label>
                            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @type = "text", @class = "custom-input-width" } })
                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger", style = "font-style: italic; font-size: 12px; color: white;" })
                        </div>
                        <div class="control-group">
                            <label style="color: white;">Contraseña</label>
                            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @type = "password", @class = "custom-input-width" } })
                            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger", style = "font-style: italic; font-size: 12px; color: white;" })
                        </div>
                        <br>
                        <div class="input-box button">
                            <input class="btn btn-custom2" type="Submit" value="Iniciar Sesión">
                        </div>
                        <br>
                        <div class="input-box button">
                            <a href="@Url.Action("Index","User")" class="btn btn-custom1">Regresar</a>
                        </div>
                        <br>
                        <div class="text">
                            <h3>No tienes una cuenta?<a href="@Url.Action("Registration","User")"> Registrate ahora</a></h3>
                            <h3>Olvidaste tu contraseña?<a href="@Url.Action("ForgotPassword","User")"> Recuperarla </a></h3>
                        </div>
                    </form>
                </div>
            }
        </div>
    </div>
</div>