@model Carwash.Models.users
@{
    ViewBag.Title = "UserEdition";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var loggedInUser = Session["LoggedInUser"] as Carwash.Models.users;
}
<div class="center-container">
    <div class="col-lg-3">
        <div class="location">
            <div class="container">
                <div class="row mt-4">
                    <div class="col-md-12">
                        <div class="location-form">
                            @using (Html.BeginForm("UpdateProfile", "User", FormMethod.Post, new { enctype = "multipart/form-data", id = "formularioMio" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(model => model.user_id)

                                <h2 class="text-center" style="color: white;">Actualizar Datos</h2>
                                <div class="form-row">
                                    <div class="col-md-12">
                                        <!-- Primera columna -->
                                        <div class="form-group">
                                            <div class="col-md-4 gradient-custom text-center text-white"
                                                 style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava1-bg.webp"
                                                     alt="Avatar" class="img-fluid my-5" style="width: 80px;" />
                                                <i class="far fa-edit mb-5"></i>
                                            </div>
                                            <div class="form-group">
                                                <label style="color: white;">Nombre</label>
                                                @Html.TextBoxFor(model => model.name, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.name, "", new { style = "font-style: italic; font-size: 12px; color: red;" })
                                            </div>
                                            <div class="form-group">
                                                <label style="color: white;">Correo</label>
                                                @Html.TextBoxFor(model => model.email, new { @class = "form-control", @readonly = "readonly" })
                                            </div>
                                            <div class="form-group">
                                                <label style="color: white;">Telefono</label>
                                                @Html.TextBoxFor(model => model.phone, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.phone, "", new { style = "font-style: italic; font-size: 12px; color: red;" })
                                            </div>
                                            <div class="form-group">
                                                <input class="btn btn-custom2" type="submit" value="Guardar" />
                                            </div>
                                            <div class="form-group">
                                                @Html.ActionLink("Volver", "UserEdit", "User", null, new { @class = "btn btn-custom1" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



