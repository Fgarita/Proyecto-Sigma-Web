@model Carwash.Models.ViewModel.RecoveryViewModel

@{
    ViewBag.Title = "ForgotPassword";
}

<div class="center-container">
    <div class="col-lg-3">
        <div class="location">
                <h2 style="color: white;">Recuperar contraseña</h2>
                <form class="location-form" action="@Url.Content("http://www.vettelcarwash.somee.com/User/PasswordRecovery")" method="post">
                    <h2 style="color: white;">Recuperar contraseña</h2>
                    <div class="control-group">
                        <label style="color: white;">Correo de recuperacion</label>
                        @Html.TextBoxFor(model => model.Email, new { @type = "text", @class = "custom-input-width" })
                        @Html.ValidationMessageFor(model => model.Email, null, new { style = "font-style: italic; font-size: 12px; color: red;"})
                    </div>
                    <div class="input-box button">
                        <input class="btn btn-custom2" type="Submit" value="Enviar">
                    </div>
                    <br>
                    <div class="input-box button">
                        <a href="@Url.Action("Login","User")" class="btn btn-custom1">Regresar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
